---
import { MarkdownInstance } from 'astro';
import { compareMdDateDesc, Frontmatter } from '../pages/index.astro';
import { RecentCards } from './units/RecentCards';

interface Props {
  mdPages: MarkdownInstance<Frontmatter>[]
}

const { mdPages } = Astro.props
const topArticle = mdPages.sort((a,b)=>compareMdDateDesc(a,b))[0]
---

<div class="py-2 mb-4">
  <h2 class="w-full h-auto text-primary-content text-center text-xl md:text-4xl font-extrabold md:rounded-lg mb-2">Latest Activity</h2>
  <RecentCards articleData={topArticle} />
</div>

